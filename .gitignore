# GITIGNORE FOR MY DOTFILES
# .gitignore for S. H. McGrath's dotfiles

# newsboat ignore cookies.txt
newsboat/.config/newsboat/cookies.txt
newsboat/.config/newsboat/error.log

# Ignore private bookmarks
bookmarks/shm-private.html

# Ignore ssh config and known_hosts
ssh/config
ssh/known_hosts

# Ignore .rclone.conf
rclone/.rclone.conf

# Ignore contents of Hazel actions folders
hazel/.hazel/actions/eject-all-disks/*
hazel/.hazel/actions/find-callback-url/*
hazel/.hazel/actions/grab-text/*
hazel/.hazel/actions/image-exif-data/*
hazel/.hazel/actions/standardize-filename/*
hazel/.hazel/actions/timestamp-file/*
hazel/.hazel/actions/un-nest/*
hazel/.hazel/actions/unzip/*

# personal reference
*/**/fstab

# scripts
# ignore secrets.py that hold API keys
*/**/secrets.py
# ignore pycache
**/__pycache__

# vim-base
# Ignore vim view directory files
vim-base/.config/vim-base/view/**
# Ignore __pycache__
vim-base/.config/vim-base/pythonx/__pycache__/
# Ignore .netrwhist
vim-base/.config/vim-base/.netrwhist
# Ignore black Python linter/formatter
vim-base/.config/vim-base/black/
# Ignore SHM Cheatsheet Tags generated by Plug
vim-base/.config/vim-base/pack/shm/start/shm-cheatsheet/doc/tags

# vim
# Ignore managed vim-plug plugins
vim/.vim/bundle
# Ignore vim .backup files
vim/.local/state/vim/backup/**
!vim/.local/state/vim/backup/.gitkeep
# Ignore vim .swp files
vim/.local/state/vim/swap/**
!vim/.local/state/vim/swap/.gitkeep
# Ignore vim undoir files
vim/.local/state/vim/undodir/**
!vim/.local/state/vim/undodir/.gitkeep
# Ignore vim sessions directory files
vim/.local/state/vim/sessions/**
!vim/.local/state/vim/sessions/.gitkeep
# Ignore vim view directory files
vim/.vim/view/**
# Ignore __pycache__
vim/.vim/pythonx/__pycache__/
# Ignore .netrwhist
vim/.vim/.netrwhist
# Ignore black Python linter/formatter
vim/.vim/black/

# neovim
# Ignore nvim .backup files
nvim/.local/state/nvim/backup/**
!nvim/.local/state/nvim/backup/.gitkeep
# Ignore nvim .swp files
nvim/.local/state/nvim/swap/**
!nvim/.local/state/nvim/swap/.gitkeep
# Ignore nvim undoir files
nvim/.local/state/nvim/undodir/**
!nvim/.local/state/nvim/undodir/.gitkeep
# Ignore nvim sessions directory files
nvim/.local/state/nvim/sessions/**
!nvim/.local/state/nvim/sessions/.gitkeep

# ranger
# ignore history
ranger/.config/ranger/history*
# ignore bookmarks
ranger/.config/ranger/bookmarks*
# ignore tagged
ranger/.config/ranger/tagged*
# ignore plugins
ranger/.config/ranger/plugins/*

# emacs
emacs/.emacs.d/auto-save-list
emacs/.emacs.d/backups
emacs/.emacs.d/elpa
emacs/.emacs.d/transient

# tiny-irc unencrypted
tiny-irc/.config/tiny/config.yml

# linters and lsp
.luarc.json
