{
    "copyright": {
        "prefix": ["copyright"],
        "body": [
            "Copyright (c) ${CURRENT_YEAR} ${0:Author}. All Rights Reserved."
        ],
        "description": "Snippet to put copyright"
    },
    "dtiso": {
        "prefix": ["dtsiso"],
        "body": [
            "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}T${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}"
        ],
        "description": "ISO date time stamp"
    },
    "date": {
        "prefix": ["dtsdate"],
        "body": ["${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}"],
        "description": "Date in (Y-m-D) format"
    },
    "time": {
        "prefix": ["dtstime"],
        "body": ["${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}"],
        "description": "Time (H:M:S)"
    },
    "datetime": {
        "prefix": ["dts"],
        "body": [
            "${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE} ${CURRENT_HOUR}:${CURRENT_MINUTE}:${CURRENT_SECOND}"
        ],
        "description": "Date and time (Y-m-d H:M:S)"
    },
    "uuid": {
        "prefix": ["uuid"],
        "body": ["${UUID}"],
        "description": "A Version 4 UUID"
    },
    "snippet": {
        "prefix": ["newsnip"],
        "body": [
			",\n\"${1}\": {\n\t\"prefix\": [\"${2}\"],\n\t\"body\": [\n\t\t\"${3}\"\n\t],\n\t\"description\": \"${4}\"\n}"
		],
        "description": "new snippet"
    },
	"lorem ipsum 50": {
		"prefix": ["lorem"],
		"body": [
			"Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet."
		],
		"description": "Lorem Ipsum - 50 Words"
	},
	"comment line": {
		"prefix": ["comline"],
		"body": [
			"$LINE_COMMENT $TM_CURRENT_LINE"
		],
		"description": "comment out current line"
	},
	"comment selection": {
		"prefix": ["comsel"],
		"body": [
			"$BLOCK_COMMENT_START $TM_SELECTED_TEXT $BLOCK_COMMENT_END"
		],
		"description": "comment out selection"
	},
	"comment todo": {
		"prefix": ["comtodo"],
		"body": [
			"$LINE_COMMENT TODO: ${1}"
		],
		"description": "add a TODO comment"
	},
	"comment fixme": {
		"prefix": ["comfix"],
		"body": [
			"$LINE_COMMENT FIXME: ${1}"
		],
		"description": "add a FIXME comment"
	},
	"vim ft": {
		"prefix": ["ftvim"],
		"body": [
			"# vim:ft=${1:sh|config}:$0"
		],
		"description": "set the vim filetype"
	}
}
