 # ==ALIASES
alias ":q"="exit" # always typing :q to exit shells, making it useful
alias .1="cd ../" # go back 1 directory levels
alias .2="cd ../../" # go back 2 directory levels
alias .3="cd ../../../" # go back 3 directory levels
alias DT="tee ~/Desktop/terminalOut.txt" # pipe content to file on MacOS Desktop
alias b64="base64 -o b64 -i"
alias calc="qalc"
alias cd..="cd ../" # go back 1 directory level (for fast typers)
alias chron?="echo 'on arch chron is fcrontab'"
alias cls="clear" # clear terminal display
alias cp="cp -iv" # preferred "cp" implementation
alias disk?="df -h" # shows disk space and percentage used
alias dockstart="doas docker start rtorrentOPEN rtorrentCAN plex fava calibre-comics calibre-library organizr tautulli home-assistant huginn"
alias dbp="dropbox.py"
alias e=$EDITOR
alias finderHideHidden="defaults write com.apple.finder ShowAllFiles FALSE" # macOS - hide hidden files in Finder
alias finderShowHidden="defaults write com.apple.finder ShowAllFiles TRUE" # macOS - show hidden files in Finder
alias findo="open -a Finder ./" # opens current directory in MacOS Finder
alias g="git"
alias gh="history | grep" # search through command history
alias hist="history" # show command history
alias ip?="dig +short myip.opendns.com @resolver1.opendns.com"
alias j="jobs -1" # show jobs
alias jc="journalctl --pager-end"
alias kvm="doas mount -t fuse.vmhgfs-fuse .host:/ /mnt/hgfs -o allow_other" # mounting for shared folders in kali vm
alias makemkv="makemkvcon" # alias not rememberable makemkv command
alias mkdir="mkdir --parents" # creates intermediate directories
alias mv="mv --interactive --verbose" # preferred "mv" implementation
alias pacsyu="w3m https://www.archlinux.org/news/ && doas pacman -Syu" # get arch news and syu
alias pacorph="pacman -Qtdq | doas pacman -Rns -"
alias pbc="pbcopy"
alias pbp="pbpaste"
alias py2="python2"
alias py3="python3"
alias py="python"
alias pyserve="python3 -m http.server 8624 && echo 'web server on port 8624'"
alias reboot="systemctl reboot"
alias rm="rm -i"
alias rsync?="echo 'rsync --recursive --progress source/ destination/'"
alias sc="systemctl"
alias scu="systemctl --user"
alias shutdown="systemctl poweroff"
alias shell?="echo $0" # tells what shell is active
alias sudo="doas"
alias tma="tmux attach" # tmux attach add -t on end of command
alias tmux="tmux -2" # set 256 colors by default
alias uninstall?="less $HOME/dotfiles/reference/uninstall-less.md"
alias venva="source ./venv/bin/activate" # python - activate virtual environment
alias venvd="deactivate" # python - deactivate virtual environment
alias venvdx="deactivate && exit" # python - deactivate && exit for virtualenv
alias venvm="python3 -m venv venv" # python - make virutal encironment
alias weather="curl wttr.in/Pittsburgh?q" # weather in Pittsburgh
alias ytdl="youtube-dl"
alias ~="cd $HOME" # go Home
alias ~d="cd ~/Dropbox" # go to Dropbox
alias ~dl="cd ~/Downloads" # go to Downloads

# vim:ft=sh:
